<appender name="TomcatRollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_PATH}/tomcat.log</file>
    <encoder>
        <pattern>${PATTERN}</pattern>
    </encoder>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <fileNamePattern>${LOG_PATH}/tomcat.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
        <maxFileSize>${FILE_SIZE}</maxFileSize>          <!-- e.g., 50MB -->
        <maxHistory>${MAX_FILE_HISTORY}</maxHistory>     <!-- e.g., 30 -->
        <cleanHistoryOnStart>true</cleanHistoryOnStart>
        <!-- optional: <totalSizeCap>5GB</totalSizeCap> -->
    </rollingPolicy>
</appender>